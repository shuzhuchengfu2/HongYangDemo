<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:zhy="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#55ffffff"
              android:orientation="vertical"
              tools:context=".MainActivity" >

    <com.hongyangdemo.widget.CustomVolumControlBar
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        zhy:bg="@drawable/customize"
        zhy:ccircleWidth="12dp"
        zhy:dotCount="20"
        zhy:cfirstColor="#252420"
        zhy:csecondColor="#FDFDFD"
        zhy:splitSize="25" />

    <com.hongyangdemo.widget.CustomVolumControlBar
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        zhy:bg="@drawable/icon"
        zhy:ccircleWidth="10dp"
        zhy:dotCount="10"
        zhy:cfirstColor="#00ff00"
        zhy:csecondColor="#ff0000"
        zhy:splitSize="15" />

    <com.hongyangdemo.widget.CustomVolumControlBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        zhy:bg="@drawable/icon_qq_small"
        zhy:ccircleWidth="10dp"
        zhy:dotCount="8"
        zhy:cfirstColor="#ADC6E5"
        zhy:csecondColor="#0362DB"
        zhy:splitSize="25" />

</LinearLayout>
