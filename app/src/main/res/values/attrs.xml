<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--自定义控件属性-->
    <declare-styleable name="CustomTitleView">
        <attr name="titleText" format="string"/>
        <attr name="titleTextColor" format="color" />
        <attr name="titleTextSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CustomImageView">
        <attr name="ititleText" format="string"/>
        <attr name="ititleTextSize" format="dimension" />
        <attr name="ititleTextColor" format="color"/>
        <attr name="image" format="reference"/>
        <attr name="imageScaleType" >
            <enum name="fillXY" value="0"/>
            <enum name="center" value="1"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="CustomProgressBar">
        <attr name="firstColor" format="color"/>
        <attr name="secondColor" format="color" />
        <attr name="circleWidth" format="dimension"/>
        <attr name="speed" format="integer"/>
    </declare-styleable>


    <declare-styleable name="CustomVolumControlBar">
        <attr name="cfirstColor" format="color"/>
        <attr name="csecondColor" format="color"/>
        <attr name="ccircleWidth" format="dimension" />
        <attr name="dotCount" format="integer"/>
        <attr name="splitSize" format="integer"/>
        <attr name="bg" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="borderRadius" format="dimension" />
        <attr name="type">
            <enum name="circle" value="0" />
            <enum name="round" value="1" />
        </attr>
        <attr name="src" format="reference"/>
    </declare-styleable>
</resources>